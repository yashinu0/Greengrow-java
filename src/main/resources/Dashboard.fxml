<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controlles.DashboardController">

    <!-- TOP BAR -->
    <top>
        <HBox style="-fx-background-color: linear-gradient(to right, #4CAF50, #F5F5DC); -fx-padding: 10px;" spacing="10">
            <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Bonjour, aziz" style="-fx-text-fill: #000000; -fx-font-size: 14px;"/>

        </HBox>
    </top>

    <!-- SIDE MENU -->
    <left>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15px; -fx-spacing: 10px;" prefWidth="200">
            <Button text="Dashboard" visible="false" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <Button text="User" onAction="#handleUser" style="-fx-background-color: transparent; -fx-text-fill: white;"/>

            <Button text="Gestion Produit" onAction="#toggleProduitMenu" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <VBox fx:id="ProduitMenu" visible="false" style="-fx-padding: 10px; -fx-background-color: #34495e;">
                <Button text="Produit" onAction="#handleProduit" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
                <Button text="Category" onAction="#handleCategroy" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            </VBox>
            <Pane VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>

        <VBox fx:id="content" style="-fx-padding: 20px;">
            <Label text="Bienvenue sur le tableau de bord" style="-fx-font-size: 16px;"/>
        </VBox>
    </center>
    <Button onAction="#handlefront" style="-fx-background-color: transparent; -fx-padding: 0;">
        <graphic>
            <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/aaa.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
</BorderPane>
