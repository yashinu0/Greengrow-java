<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.DashboardController">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="10" style="-fx-background-color: linear-gradient(to right, #4CAF50, #F5F5DC); -fx-padding: 10px;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Dashboard" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label style="-fx-text-fill: #000000; -fx-font-size: 14px;" text="Bonjour" />

        </HBox>
    </top>

    <!-- SIDE MENU -->
    <left>
        <VBox prefWidth="200" style="-fx-background-color: #2E8B57; -fx-padding: 15px; -fx-spacing: 10px;">
            <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Dashboard" visible="false" />
            <Button onAction="#handleUser" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" stylesheets="@css/style.css" text="User" />

            <Button onAction="#toggleProduitMenu" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" stylesheets="@css/style.css" text="Gestion Produit" />
            <VBox fx:id="ProduitMenu" style="-fx-padding: 10px; -fx-background-color: #34495e;" visible="false">
                <Button onAction="#handleProduit" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Produit" />
                <Button onAction="#handleCategroy" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Category" />
            </VBox>
            <Pane VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>

        <VBox fx:id="content" prefHeight="619.0" prefWidth="869.0" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 16px;" text="Bienvenue sur le tableau de bord" />
        </VBox>
    </center>
    <Button onAction="#handlefront" style="-fx-background-color: transparent; -fx-padding: 0;">
        <graphic>
            <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/aaa.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
</BorderPane>
