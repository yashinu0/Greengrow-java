<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="250.0" prefWidth="400.0" spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.StatusUpdateController">
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Mise à jour du statut" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Separator />
        
        <VBox spacing="15">
            <Label text="Sélectionnez le nouveau statut" style="-fx-font-size: 14; -fx-text-fill: #6c757d;" />
            
            <ComboBox fx:id="statusComboBox" style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 5; -fx-padding: 8;" />
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="cancelButton" text="Annuler" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 16;" onAction="#handleCancel" />
                <Button fx:id="updateButton" text="Mettre à jour" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 16;" onAction="#handleUpdate" />
            </HBox>
        </VBox>
    </VBox>
</VBox> 