<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="250.0" prefWidth="400.0" spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 30;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.StatusUpdateController">
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Mise à jour du statut" />
        <Separator />
        
        <VBox spacing="15">
            <Label style="-fx-font-size: 14; -fx-text-fill: #6c757d;" text="Sélectionnez le nouveau statut" />
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
               
               <ComboBox fx:id="statusComboBox" prefHeight="43.0" prefWidth="92.0" style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 5; -fx-padding: 8;" />
                <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 16;" text="Annuler" />
                <Button fx:id="updateButton" onAction="#handleUpdate" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 16;" text="Mettre à jour" textFill="WHITE" />
            </HBox>
        </VBox>
    </VBox>
</VBox>
