<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" styleClass="main-container" stylesheets="@../styles/feed-details.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FeedDetailsController">

    <VBox spacing="20" styleClass="header-container">
        <!-- Header with breadcrumb -->
        <VBox spacing="10">
            <Text style="-fx-font-size: 24; -fx-font-weight: bold;" text="Détails du Feed" />
            <HBox spacing="5" styleClass="breadcrumb">
                <Label onMouseClicked="#handleBackToList" styleClass="breadcrumb-item" text="Feeds" />
                <Text styleClass="breadcrumb-separator" text="/" />
                <Label styleClass="breadcrumb-item" text="Détails" />
            </HBox>
        </VBox>
    </VBox>

     <!-- Main card -->
     <VBox layoutX="36.0" layoutY="113.0" prefHeight="647.0" prefWidth="1129.0" spacing="0" styleClass="card">
         <!-- Card header -->
         <HBox alignment="CENTER_LEFT" spacing="10" styleClass="card-header">
             <Text style="-fx-font-size: 16; -fx-font-weight: bold;" text="Message de " />
             <Text fx:id="nameLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" />
             <Region HBox.hgrow="ALWAYS" />
             <Button fx:id="statusButton" onAction="#handleStatusChange" styleClass="action-button" />
             <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="action-button danger-button" text="Supprimer" />
         </HBox>

         <!-- Card body -->
         <VBox prefHeight="574.0" prefWidth="1090.0" spacing="20" styleClass="card-body">
             <!-- Info table -->
             <TableView fx:id="infoTable" prefHeight="171.0" prefWidth="1050.0" styleClass="info-table">
                 <columns>
                     <TableColumn fx:id="fieldColumn" prefWidth="250.0" text="Champ" />
                     <TableColumn fx:id="valueColumn" prefWidth="797.0" text="Valeur" />
                 </columns>
             </TableView>

             <!-- Message card -->
             <VBox prefHeight="225.0" prefWidth="1050.0" spacing="0" styleClass="message-card">
                 <HBox alignment="CENTER_LEFT" spacing="10" styleClass="message-header">
                     <Text style="-fx-font-size: 16; -fx-font-weight: bold;" text="Message" />
                 </HBox>
                 <TextArea fx:id="messageArea" editable="false" prefHeight="118.0" prefRowCount="5" prefWidth="1009.0" styleClass="message-body" wrapText="true" />
             </VBox>
         </VBox>

                            <!-- Action buttons -->
          <HBox alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="1049.0" spacing="10" styleClass="button-container">
              <Button onAction="#handleBackToList" styleClass="button view-button" text="Retour aux feedbacks" />
              <Region HBox.hgrow="ALWAYS" />
              <Button onAction="#handleReplyEmail" styleClass="button toggle-button" text="Répondre par email" />
          </HBox>
     </VBox>
</AnchorPane>
