<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" styleClass="root" stylesheets="@../Styles/feeddetails.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.FeedDetailsController">

    <Text fx:id="nameLabel" styleClass="name-label" />

    <VBox styleClass="info-container">
        <TableView fx:id="infoTable" prefWidth="315.0" VBox.vgrow="NEVER">
            <columns>
                <TableColumn fx:id="fieldColumn" prefWidth="263.0" text="Champ" />
                <TableColumn fx:id="valueColumn" prefWidth="291.0" text="Valeur" />
            </columns>
        </TableView>

        <VBox spacing="10">
            <padding>
                <Insets top="20" />
            </padding>
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Message:" />
            <TextArea fx:id="messageArea" editable="false" prefRowCount="5" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="button-container">
        <Button fx:id="statusButton" onAction="#handleStatusChange" />
        <Button onAction="#handleReplyEmail" styleClass="reply-button" text="RÃ©pondre" />
        <Button onAction="#handleDelete" styleClass="delete-button" text="Supprimer" />
        <Button onAction="#handleBackToList" styleClass="back-button" text="Retour" />
         </HBox>

         </VBox>
