<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="18" style="-fx-background-color: #f8f9fa; -fx-padding: 30; -fx-background-radius: 18;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.ChatViewController">
<Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0288d1; -fx-padding: 0 0 10 0;" text="Disscussion avec Admin" />
    <ScrollPane fitToWidth="true" prefHeight="320" prefWidth="420" style="-fx-background-color: transparent;">
        <content>
             <VBox fx:id="messagesContainer" spacing="8" style="-fx-background-color: transparent; -fx-padding: 8 0;" />
        </content>
    </ScrollPane>
<HBox alignment="CENTER" prefHeight="26.0" prefWidth="652.0" spacing="10">
    <TextArea fx:id="messageInput" promptText="Votre question..." style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #b3e5fc; -fx-border-width: 2; -fx-padding: 8 12; -fx-font-size: 15px; -fx-background-color: #fff; -fx-text-fill: #333;" />
    <Button fx:id="sendButton" onAction="#sendMessage" prefHeight="37.0" prefWidth="176.0" style="-fx-background-color: linear-gradient(to right, #00bcd4, #4fc3f7); -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 8 22; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,191,255,0.10), 2, 0.1, 0, 1);" text="Envoyer" />
</HBox>
</VBox>
