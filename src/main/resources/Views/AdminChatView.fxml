<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controlles.AdminChatViewController"
      spacing="10"
      style="-fx-background-color: white;"
      prefWidth="900"
      prefHeight="600">
    
    <!-- Liste des réclamations à gauche -->
    <VBox spacing="10" prefWidth="300" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
        <Label text="Liste des réclamations" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        
        <TextField fx:id="searchField" promptText="Rechercher..."/>
        
        <ListView fx:id="reclamationListView" VBox.vgrow="ALWAYS"/>
    </VBox>
    
    <!-- Chat à droite -->
    <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-padding: 10;">
        <HBox alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
            <Label fx:id="clientNameLabel" text="Sélectionnez une réclamation" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        </HBox>
        
        <ScrollPane VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <VBox fx:id="messagesContainer" spacing="10" style="-fx-background-color: white;"/>
        </ScrollPane>
        
        <HBox spacing="10" alignment="CENTER">
            <TextArea fx:id="messageInput" 
                     promptText="Écrivez votre réponse ici..."
                     wrapText="true"
                     prefRowCount="2"
                     HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" 
                    text="Répondre"
                    onAction="#sendMessage"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
    
</HBox> 