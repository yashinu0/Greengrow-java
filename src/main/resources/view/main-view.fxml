<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Controlles.MainController"
      stylesheets="@../styles/nature-theme.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Gestion des Commandes" styleClass="window-title"/>
    
    <VBox spacing="15" alignment="CENTER" styleClass="grid-pane">
        <Button text="Gestion des Commandes" onAction="#openCommandesView" />
        <Button text="Gestion des Livreurs" onAction="#openLivreursView" />
        <Button text="Suivi des Livreurs" onAction="#openCarteView" />
    </VBox>
</VBox>
