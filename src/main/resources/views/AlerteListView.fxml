<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.AlerteListController" spacing="10" style="-fx-padding: 20;"
      prefWidth="600" prefHeight="500">

    <Text text="Alert List" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <ListView fx:id="alerteListView" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
              VBox.vgrow="ALWAYS">
        <!-- Remove prefHeight here and let VBox.vgrow handle it -->
    </ListView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Back" onAction="#handleBack" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 80;"/>
    </HBox>
</VBox>