<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controlles.ResetPasswordController"
      prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Réinitialisation du mot de passe" style="-fx-font-weight: bold;">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <VBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Entrez votre nouveau mot de passe"/>
        <PasswordField fx:id="newPasswordField" promptText="Nouveau mot de passe"/>

        <Label text="Confirmez le nouveau mot de passe"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe"/>
    </VBox>

    <HBox spacing="10.0" alignment="CENTER">
        <Button text="Réinitialiser" onAction="#resetPasswordFx" defaultButton="true"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Annuler"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false"/>
</VBox>